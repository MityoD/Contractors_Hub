@model IEnumerable<ToolViewModel>

@{
    ViewBag.Title = "All Tools";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="text-center row">
    @if (Model.Any())
    {
        @foreach (var tool in Model)
    {
        <div class="card col-4" style="width: 20rem;">
            <img class="card-img-top" src="@tool.ImageUrl" alt="Tool Image">
            <div class="card-body">
                <h5 class="card-title mt-1">@tool.Title</h5>
                <p class="mb-0">Brand: @tool.Brand</p>
                <p class="mb-0">Price: @tool.Price</p>
                <p class="mb-0">Available: @tool.Quantity</p>
                <p class="mb-0">Category: @tool.Category</p>
            </div>
                <div>
                <a class="btn btn-secondary mb-2" data-bs-toggle="modal" data-bs-target="#exampleModal_@tool.Id">Details</a>

                <partial name="_ToolDetailsAdminPartial" model="@tool" />
                
                <a asp-area="Admin" asp-controller="Tool" asp-action="Edit" asp-route-id="@tool.Id" class="btn btn-primary mb-2">Edit</a>

                <a asp-area="Admin" asp-controller="Tool" asp-action="Delete" asp-route-id="@tool.Id" onclick="return confirm('Are sure wants to delete this tool?');" class="btn btn-danger mb-2">Delete</a>
                </div>
            </div>
    }

    }
    else
    {
        <h3 class="text-center">No tools</h3>
    }
</div>