@model IEnumerable<ToolViewModel>

@{
    ViewBag.Title = "All Tools";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="text-center row">
    @if (Model.Any())
    {
        @foreach (var tool in Model)
    {
        <div class="card col-4" style="width: 20rem;">
            <img class="card-img-top" src="@tool.ImageUrl" alt="Tool Image">
            <div class="card-body">
                <h5 class="card-title mt-1">@tool.Title</h5>
                <p class="mb-0">Brand: @tool.Brand</p>
                <p class="mb-0">Price: @tool.Price</p>
                <p class="mb-0">Available: @tool.Quantity</p>
                <p class="mb-0">Category: @tool.Category</p>
            </div>
                <a class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal_@tool.Id">
                    Details
                </a>
                <partial name="_ToolDetailsPartial" model="@tool" />
                <br>
            <a asp-controller="Cart" asp-action="Add" asp-route-id="@tool.Id" class="btn btn-success mb-2">Add to Cart</a>
      </div>
    }

    }
    else
    {
        <h3 class="text-center">No tools</h3>
    }
</div>