@model TotalRatingModel

@{
    ViewBag.Title = $"Contractor {Model.ContractorId} rating";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="d-flex justify-content-center">
    <div class="card " style="width: 50rem;">
        <div class="card-body">
            <h3 class="card-title text-center">@Model.ContractorId</h3>
            <p class="card-text"><span class="fw-bold">Rating: </span>@Model.TotalPoints / 5</p>
            <p class="card-text"><span class="fw-bold">From: </span>@Model.TotalRates users</p>          
        </div>
    </div>
</div>