@model IEnumerable<ToolViewModel>

@{
    ViewBag.Title = "My Cart";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="text-center row">
    @if(Model.Any())
    {    
    @foreach (var tool in Model)
        {
        <div class="card col-4" style="width: 20rem;">
            @* <img class="card-img-top" style="width: 18rem;"
        src="@job.ImageUrl" alt="Book Image">*@
            <div class="card-body">

                <h5 class="card-title mt-1">@tool.Title</h5>
                <p class="mb-0">Brand: @tool.Brand</p>
                <p class="mb-0">Price: @tool.Price</p>
                <p class="mb-0">Available: @tool.Quantity</p>
                <p class="mb-0">Description: @tool.Description</p>
                <p class="mb-0">Category: @tool.Category</p>
                <p class="mb-0">Added by: @tool.OwnerName</p>
            </div>
                <a asp-controller="Cart" asp-action="Remove" asp-route-id="@tool.Id" class="btn btn-danger mb-2">Remove from cart</a>
        </div>
        }
        <div class="card-body">
            <a asp-controller="Cart" asp-action="Order" class="btn btn-success mb-2">Order items</a>
        </div>

    }else{
        <h3>No items in cart</h3>
    }
</div>